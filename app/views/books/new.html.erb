<div class="card shadow-sm">
  <div class="card-body">
    <%= form_with model: @book, local: true do |f| %>
      <div class="mb-3">
        <%= f.label :title, class: "form-label" %>
        <%= f.text_field :title, class: "form-control", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :author, class: "form-label" %>
        <%= f.text_field :author, class: "form-control", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :published_year, class: "form-label" %>
        <%= f.number_field :published_year, class: "form-control", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :status, class: "form-label" %>
        <%= f.select :status, ["available", "borrowed"], {}, class: "form-select" %>
      </div>

      <%= f.submit "Save", class: "btn btn-success px-4" %>
      <%= link_to "Cancel", books_path, class: "btn btn-secondary ms-2" %>
    <% end %>
  </div>
</div>
