<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold text-primary">Books</h1>
    <%= link_to "New Book", new_book_path, class: "btn btn-primary shadow-sm px-4" %>
  </div>

  <div class="table-responsive rounded shadow-sm">
    <table class="table table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Author</th>
          <th scope="col">Published Year</th>
          <th scope="col">Status</th>
          <th scope="col" class="text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td class="fw-semibold"><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.published_year %></td>
            <td><%= book.status %></td>
            <td class="text-center">
              <%= link_to book, class: "btn btn-outline-info btn-sm me-1", title: "View Details" do %>
                <i class="bi bi-eye"></i>
              <% end %>
              <%= link_to edit_book_path(book), class: "btn btn-outline-warning btn-sm me-1", title: "Edit Book" do %>
                <i class="bi bi-pencil"></i>
              <% end %>
              <%= form_with url: book_path(book), method: :delete, data: { confirm: "Are you sure?" }, class: "d-inline" do %>
                <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete Book">
                  <i class="bi bi-trash"></i>
                </button>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
